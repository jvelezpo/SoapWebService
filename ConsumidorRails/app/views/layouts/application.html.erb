<!DOCTYPE html>
<html>
<head>
  <title>SoapApp</title>
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>

</head>
<body>
    <div id="header">
        <div class="logo">
          <h1>BEC</h1>
        </div>
        <nav class="bar">
          <ul>
            <li><%= link_to 'Inicio', root_path %> </li>
            <li><%= link_to 'Acerca de', '/about' %></li>
          </ul>
        </nav>
    </div>


  <div id="content">
    <% flash.each do |key, value| %>
         <div class="flash <%= key %>"><%= value %></div>
    <%  end %>
    <%= yield %>
  </div>

  <div id="footer">

    <%= render 'layouts/footer' %>

  </div>

</body>
</html>
